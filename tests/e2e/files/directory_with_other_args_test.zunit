#!/usr/bin/env zunit
# shellcheck shell=bash
# shellcheck disable=SC2154  # state is set by the zunit framework

@test 'Test directory with other arguments' {
  # Verify the directory and file exist
  local test_dir="${ZUNIT_DIR}/_support/fixtures"
  local test_file="${ZUNIT_DIR}/_support/fixtures/fixture1.txt"

  run test -d "${test_dir}"
  assert "${state}" equals 0

  run test -f "${test_file}"
  assert "${state}" equals 0

  # Run minidocs with the directory and a file
  run "${minidocs}" "${test_file}" "${test_dir}" || true

  # Check exit status - should be successful since there's a valid file
  assert "${state}" equals 0

  # Verify output contains content from the file
  assert "${output}" contains "This is the first test fixture file"

  # Verify file header is included
  assert "${output}" contains "fixture1.txt"

  # Verify warning about directory
  assert "${output}" contains "Error: Cannot read directory ${test_dir} as a file"
}
